<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= blog.title %>
  </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    /* Custom styles */
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      /* Light background */
    }

    .blog-title {
      font-size: 2rem;
      color: #007bff;
      /* Title color */
    }

    .blog-category {
      font-size: 0.75rem;
      /* Very small font */
      color: #28a745;
      /* Change this color to your desired color */
      margin-left: 0.5rem;
      /* Spacing between title and category */
    }

    .meta-info {
      font-size: 0.9rem;
      color: #6c757d;
    }

    .content-section {
      background-color: white;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .comment-form {
      margin-top: 2rem;
    }

    .action-buttons {
      margin-bottom: 1rem;
    }

    .tags-container {
      margin-top: 1rem;
    }

    /* Heart button styles */
    .heart-button {
      background-color: transparent;
      /* Transparent background */
      border: none;
      /* No border */
      cursor: pointer;
      /* Change cursor on hover */
      font-size: 1.5rem;
      /* Size of the heart */
      margin-left: 10px;
      /* Spacing */
      transition: transform 0.2s, color 0.2s;
      /* Animation effect */
    }

    .heart-button:hover {
      transform: scale(1.2);
      /* Scale up on hover */
    }

    .heart-button.not-liked {
      color: #000;
      /* Black heart color when not liked */
    }

    .heart-button.liked {
      color: #e63946;
      /* Heart color when liked */
      background-color: transparent;
      /* Keep background transparent when liked */
    }

    @media (max-width: 768px) {
      .date {
        display: block;
      }
    }
  </style>
</head>

<body class="p-5">

  <div class="container mt-4">
    <h1 class="blog-title mb-1">
      <%= blog.title %>
        <span class="blog-category">(<%= blog.category %>)</span> <!-- Category displayed in small font -->
    </h1>

    <div class="meta-info mb-3">
      <span>By <strong>
          <%= blog.author.username %>
        </strong></span> |
      <span>
        <%= blog.createdAt.toLocaleString('default', { month: 'short' }) %>
          <%= blog.createdAt.getDate() %>,
            <%= blog.createdAt.getFullYear() %>
      </span> |
      <span class="views">Views: <%= blog.views %></span>

      <span class="date">
        <% if (blog.createdAt.getTime() !==blog.updatedAt.getTime()) { %>
          <span class="text-warning ms-2">
            (Updated:<%= blog.updatedAt.toLocaleString('default', { month: 'short' }) %>
              <%= blog.updatedAt.getDate() %>,
                <%= blog.updatedAt.getFullYear() %>
                  at <%= blog.updatedAt.toLocaleTimeString('default', { hour: '2-digit' , minute: '2-digit' }) %>)
          </span>
          <% } %>

            <form action="/blogs/<%= blog._id %>/like" method="post" class="d-inline heartlikes">
              <button
                class="heart-button <%= blog.likes.includes(currUser && currUser._id ? currUser._id : null) ? 'liked' : 'not-liked' %>"
                title="Like" <%=!currUser ? 'disabled' : '' %> style="<%= !currUser
                  ? 'pointer-events: none; opacity: 0.5;' : '' %>">
                  <i class="fas fa-heart"></i>
              </button>

              <span class="likes">Likes: <%= blog.likes.length %></span> <!-- Display the number of likes -->
            </form>
      </span>
    </div>

    <div class="content-section mb-3">
      <p>
        <%= blog.content %>
      </p>
    </div>

    <% if (currUser && blog.author.equals(currUser._id)) { %>
      <div class="action-buttons">
        <a href="/blogs/<%= blog._id %>/edit" class="btn btn-primary btn-sm" title="Edit">
          <i class="fas fa-edit"></i>
        </a>
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="post" class="d-inline">
          <button class="btn btn-danger btn-sm" title="Delete">
            <i class="fas fa-trash"></i>
          </button>
        </form>
      </div>
      <% } %>

        <h2 class="mt-4">Comments</h2>
        <form action="/blogs/<%= blog._id %>/comments" method="post" class="comment-form">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Enter your comment" name="content" <% if (!currUser) {
              %> disabled <% } %> required>
              <button class="btn btn-outline-secondary" type="submit" <% if (!currUser) { %> disabled <% } %>
                  >Comment</button>
          </div>
          <% if (!currUser) { %>
            <p class="small text-danger">You must be logged in to comment.</p>
            <% } %>
        </form>

        <ul class="list-group mt-3">
          <% if (blog.comments.length !=0) { %>
            <% for (let comment of blog.comments) { %>
              <li class="list-group-item">
                <b>
                  <%= comment.author.username %>
                </b>: <%= comment.content %>
                  <% if (currUser && comment.author.equals(currUser._id)) { %>
                    <form action="/blogs/<%= blog._id %>/comments/<%= comment._id %>?_method=DELETE" method="post"
                      class="d-inline">
                      <button class="btn btn-danger btn-sm float-end" title="Delete">
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                    <% } %>
              </li>
              <% } %>
                <% } else { %>
                  <li class="list-group-item text-muted">No comments yet.</li>
                  <% } %>
        </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>