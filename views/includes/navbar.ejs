

<body class="p-0 m-0 border-0">

  <nav class="navbar navbar-expand-lg bg-light p-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">BlogSphere</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/blogs">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="https://github.com/mic-720" target="_blank">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/blogs/new">Write new Blog</a>
          </li>
        </ul>

        <!-- Dark mode toggle button -->
        <button id="darkModeToggle" class="btn btn-outline-secondary me-3">
          <i class="fas fa-lightbulb"></i> <!-- Lightbulb Icon -->
        </button>
        

        <!-- User auth buttons -->
        <% if (!currUser) { %>
        <div class="d-flex flex-column flex-lg-row">
          <a href="/auth/signup" class="btn btn-outline-success mb-2 mb-lg-0 me-lg-2">Signup</a>
          <a href="/auth/signin" class="btn btn-outline-success">Signin</a>
        </div>
        <% } else { %>
        <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
          <li class="nav-item me-3">
            <a class="nav-link disabled" aria-disabled="true">
              <strong>Welcome, <%= currUser.username %>!</strong>
            </a>
          </li>
          <li class="nav-item">
            <a href="/auth/logout" class="btn btn-outline-danger">Logout</a>
          </li>
        </ul>
        <% } %>
      </div>
    </div>
